{
    "name": "henryejemuta/php-peyflex-vtu",
    "description": "A PHP package for integrating with the Peyflex VTU API.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Henry Ejemuta",
            "email": "henry.ejemuta@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "friendsofphp/php-cs-fixer": "^3.92"
    },
    "autoload": {
        "psr-4": {
            "HenryEjemuta\\Peyflex\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HenryEjemuta\\Peyflex\\Tests\\": "tests/"
        }
    },
    "config": {
        "platform": {
            "php": "7.4"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "lint": "vendor/bin/php-cs-fixer fix --dry-run --diff",
        "format": "vendor/bin/php-cs-fixer fix"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}